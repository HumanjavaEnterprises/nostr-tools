{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./lib/types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "./lib/types",
    "types": ["vitest/globals", "node"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "lib"]
}
